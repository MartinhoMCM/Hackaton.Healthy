<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hackathon.healthy.SonFragment"
    android:background="@color/babckgray"
    android:orientation="vertical"
    android:id="@+id/TextInput">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_son"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:ems="13"
                android:text="@string/bebe"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"
                android:textColor="#000"
                android:textSize="19sp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/baby_name"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="@string/nome"

                android:textSize="16sp" />

            <EditText
                android:id="@+id/baby_age"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="@string/idade"
                android:inputType="number"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/baby_sex"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="@string/sexo"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/baby_birth"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="@string/data"
                android:inputType="date"
                android:textSize="16sp" />


            <Button
                android:id="@+id/registrar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bentrar"
                android:ems="70"
                android:fontFamily="sans-serif"
                android:text="@string/concluindo"
                android:textColor="#000"
                android:textSize="16sp"

                />

        </LinearLayout>


    </android.support.v7.widget.CardView>






</android.support.constraint.ConstraintLayout>
